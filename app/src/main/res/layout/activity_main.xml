<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TimePicker
        android:id="@+id/timePicker"
        style="@style/Clock"
        android:layout_width="413dp"
        android:layout_height="385dp"
        android:amPmBackgroundColor="@color/Magenta"
        android:headerTimeTextAppearance="@style/Clock"
        android:numbersSelectorColor="@color/Magenta"
        android:saveEnabled="true"
        android:scaleX="1.32"
        android:scaleY="1.32"
        android:textColorPrimary="@color/Magenta"
        android:textColorSecondary="@color/Magenta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.302" />

    <Button
        android:id="@+id/AddAlarmButton"
        android:layout_width="304dp"
        android:layout_height="55dp"
        android:text="ADD ALARM"
        android:textSize="25dp"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timePicker"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/button"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        app:layout_constraintVertical_bias="0.715"
        app:layout_constraintHorizontal_bias="0.495" />

    <Button
        android:id="@+id/VibButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="135dp"
        android:layout_marginRight="36dp"
        android:scaleX="1.4"
        android:scaleY="1.4"
        android:background="@drawable/vib"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/SoundButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleX="1.4"
        android:scaleY="1.4"
        android:layout_marginBottom="135dp"
        android:layout_marginLeft="38dp"
        android:background="@drawable/sound"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="?android:attr/borderlessButtonStyle"/>

</android.support.constraint.ConstraintLayout>
